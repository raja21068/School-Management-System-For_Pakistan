    public static boolean isAnyCheckBoxSelect(JTable table, int column) {
        int totalRows = table.getRowCount();
        for (int i = 0; i < totalRows; i++) {
            if ((boolean) table.getValueAt(i, column)) {
                return true;
            }
        }
        return false;
    }

